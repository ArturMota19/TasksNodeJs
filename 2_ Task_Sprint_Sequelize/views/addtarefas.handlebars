<main class="mainAddTarefas">
  <form action="/addTarefa" class="formDisplay" method="POST">
    <section class="inputSecTarefa">
      <h1 class="tituloAddTarefas">O que você precisa fazer?</h1>
      <input class="addTarefa" type="text" name="nome" placeholder="Digite sua tarefa..." required> 
    </section>
    <section class="inputSecTarefa">
      <h1 class="tituloAddTarefas">Descreva sua tarefa</h1>
      <textarea placeholder="Digite sua descrição..." class="descTarefa" name="descTarefa"></textarea>
    </section>   
  <section class="selecPrioridade">
    <h1 class="tituloAddTarefas">Qual a prioridade da tarefa?</h1>
      <select name="select">
        <option value="Baixa" selected>Baixa</option>
        <option value="Media">Média</option>
        <option value="Alta">Alta</option>
      </select>
  </section>
    <div class="divAddTarefa">
      <img class="canetaIcon" alt="Caneta icone" src="caneta.png">
      <input class="botaoAddTarefa" type="submit" value=""> 
    </div>   
</main>